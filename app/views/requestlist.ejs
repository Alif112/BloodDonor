<style type="/css/table2.css"></style>
<div class="container" style="margin-top:50px">
  <div class="container">
    <table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Sender ID</th>
      <th scope="col" style="width:40%">Message</th>
      <th scope="col">Accept/Reject</th>
    </tr>
  </thead>

  <tbody>
    <%for(var i=0;i<result.length;i++){%>
    <tr>
      <th scope="row"><%=i%></th>
      <td><%=result[i].sender_id%></td>
      <td><%=result[i].message%></td>
      <td >
      
        <%if(result[i].status == "Pending"){%> 
          <button type="button" class="btn btn-success" onclick='updateStatus("Accept","<%=result[i]._id%>")'>Accept</button>
          <button type="button" class="btn btn-danger" onclick='updateStatus("Reject","<%=result[i]._id%>")'>Reject</button>
        <%} else if(result[i].status == "Accept"){%>
          <button type="button" class="btn btn-success" disabled>Accepted</button>
        <%}else{%>
          <button type="button" class="btn btn-danger" disabled>Rejected</button>
        <%}%>
      </td>
    </tr>
    <%}%>

  </tbody>
</table>


