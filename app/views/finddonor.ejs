    <script>
    $(document).ready(function () {
            $.getJSON('/getdonardata', function (queryResult) {
                $('#example').DataTable({
                    responsive: true,
                    data: queryResult,
                    columns: [
                        { data: "user_id",targets: 0  },
                        { data: "fullname",targets: 1  },
                        { data: "bloodgroup",targets: 2  },
                        { data: "address",targets: 3  },
                        { data: "lastgiven",targets: 4 },
                        {
                            data: 'user_id', targets: 5, 'render': function (data, type, row) {
                              return '<button type="button" class="btn btn-info" data-toggle="modal" data-target="#myModal">Request</button>'
                            }
                        }
                    ]
                });
            })
    
} );
    </script>

